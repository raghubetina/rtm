<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    Tasks

    <a data-toggle="collapse" href="#user_tasks_new_form">
      Add task
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @user.tasks.each do |task| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <!-- Show link start -->
        <%= link_to task, task %>
        <!-- Show link end -->

      </li>
    <% end %>

    <div class="card-footer">
      <div class="collapse" id="user_tasks_new_form">
        <!-- New associationcollection form start -->
        <%= render partial: "users/user_tasks_new_form" %>
        <!-- New associationcollection form end -->
      </div>
    </div>

  </ul>
</div>
